    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/modbus_test_server.py",
            "console": "integratedTerminal",
            "subProcess": true
        },
        {
            "name": "Run (env)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/launch.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/tests/utils/.debug.env",
            "args": "--config=tests/utils/.debug.env.yaml",
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Run (config)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/launch.py",
            "console": "integratedTerminal",
            "args": "--config=tests/utils/.debug.yaml",
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Run (args)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/launch.py",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Clean (config)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/launch.py",
            "console": "integratedTerminal",
            "args": "--config=tests/utils/.debug.yaml --log-level=DEBUG --hass-enabled --clean",
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Clean (env)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/launch.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/tests/utils/.debug.env",
            "args": "--config=tests/utils/.debug.env.yaml --log-level=DEBUG --hass-enabled --clean",
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Discovery Only",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/launch.py",
            "console": "integratedTerminal",
            "args": "--config=tests/utils/.debug.yaml --log-level=DEBUG --hass-enabled --hass-discovery-only",
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Validate sigenenergy2mqtt.yaml",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/launch.py",
            "console": "integratedTerminal",
            "args": "--log-level=DEBUG --config=resources/configuration/sigenergy2mqtt.yaml --validate",
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Version",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/launch.py",
            "console": "integratedTerminal",
            "args": "--version",
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        }
    ]
}