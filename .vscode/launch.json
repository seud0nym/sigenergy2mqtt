{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/modbus_test_server.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true
        },
        {
            "name": "Run (env)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/.debug.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/tests/utils/.debug.env",
            "args": "--config=tests/utils/.debug.env.yaml",
            "justMyCode": false,
            "subProcess": true,
            "purpose": [
                "debug-test"
            ],
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Run (config)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/.debug.py",
            "console": "integratedTerminal",
            "args": "--config=tests/utils/.debug.yaml",
            "justMyCode": false,
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            }
        },
        {
            "name": "Run (args)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/.debug.py",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "justMyCode": false,
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            }
        },
        {
            "name": "Clean (config)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/.debug.py",
            "console": "integratedTerminal",
            "args": "--config=tests/utils/.debug.yaml --clean",
            "justMyCode": false,
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            }
        },
        {
            "name": "Clean (env)",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/.debug.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/tests/utils/.debug.env",
            "args": "--config=tests/utils/.debug.env.yaml --clean",
            "justMyCode": false,
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            }
        },
        {
            "name": "Discovery Only",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/.debug.py",
            "console": "integratedTerminal",
            "args": "--config=tests/utils/.debug.yaml --log-level=DEBUG --hass-discovery-only",
            "justMyCode": false,
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            }
        },
        {
            "name": "Version",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/utils/.debug.py",
            "console": "integratedTerminal",
            "args": "--version",
            "justMyCode": false,
            "subProcess": true,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            }
        }
    ]
}